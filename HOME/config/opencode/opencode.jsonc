{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "agent": {
    "armis-purple": {
      "description": "Armis Purple - Elite Offensive Security Orchestration Agent for FedRAMP Red Team Exercise",
      "mode": "primary",
      "prompt": "{file:./armis-purple.md}",
      "temperature": 0.5,
      "tools": {
        "*": true
      },
      "permission": {
        "edit": "allow",
        "bash": "allow",
        "webfetch": "allow"
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:ctx7sk-4e1784ea-e894-4ad9-9310-00db0c714bfc}"
      }
    }
  },
  "theme": "armis-purple"
}
